<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MessageTextView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#2196F3"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="bottom"
        android:scrollbars="vertical"
        android:text=""
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/ClearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/MessageTextView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="180dp" />

    <Button
        android:id="@+id/OpenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open"
        app:cornerRadius="0dp"
        app:layout_constraintLeft_toRightOf="@+id/ClearButton"
        app:layout_constraintTop_toBottomOf="@+id/MessageTextView"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="120dp" />

    <Button
        android:id="@+id/ScanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        app:cornerRadius="0dp"
        app:layout_constraintLeft_toRightOf="@+id/OpenButton"
        app:layout_constraintTop_toBottomOf="@+id/MessageTextView"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="120dp" />

    <Button
        android:id="@+id/DumpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dump"
        app:cornerRadius="0dp"
        app:layout_constraintLeft_toRightOf="@+id/ScanButton"
        app:layout_constraintTop_toBottomOf="@+id/MessageTextView"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="120dp" />

    <Button
        android:id="@+id/CloseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        app:cornerRadius="0dp"
        app:layout_constraintLeft_toRightOf="@+id/DumpButton"
        app:layout_constraintTop_toBottomOf="@+id/MessageTextView"
        tools:layout_editor_absoluteX="480dp"
        tools:layout_editor_absoluteY="120dp" />

    <ImageView
        android:id="@+id/FingerprintImageView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CloseButton"
        app:srcCompat="@drawable/ic_launcher_background" />

</androidx.constraintlayout.widget.ConstraintLayout>